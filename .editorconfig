root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.js]
charset = utf-8
indent_size = 2
indent_style = space

# Matches the exact files either package.json or .travis.yml
[*.yml]
indent_style = space
indent_size = 2
